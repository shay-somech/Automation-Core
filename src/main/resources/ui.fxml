<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="core.UI.Controller">
    <top>
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Gini Apps Automation" textAlignment="CENTER" textFill="#38a12a">
                    <font>
                        <Font name="Heiti SC Light" size="30.0"/>
                    </font>
                    <padding>
                        <Insets bottom="15.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <graphic>
                        <ImageView fitHeight="88.0" fitWidth="77.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@uiAssets/uedrxh.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Label>
            </children>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
        </HBox>
    </top>
    <left>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Run Type">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label text="Platform">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets top="50.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label layoutX="10.0" layoutY="10.0" text="Device">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <CheckBox fx:id="resetAppCheckBox" mnemonicParsing="false" text="Reset App after Test">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </CheckBox>
                <CheckBox fx:id="installAppCheckBox" mnemonicParsing="false" text="Install App">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </CheckBox>
            </children>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
        </VBox>
    </left>
    <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER_RIGHT">
            <children>
                <RadioButton mnemonicParsing="false" text="Single Run">
                    <toggleGroup>
                        <ToggleGroup fx:id="runType"/>
                    </toggleGroup>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </RadioButton>
                <RadioButton mnemonicParsing="false" text="Parallel Run" toggleGroup="$runType">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </RadioButton>
                <ComboBox fx:id="platformComboBox" layoutX="10.0" layoutY="64.0" promptText="Select Platform">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </ComboBox>
                <ComboBox id="deviceComboBox" fx:id="deviceComboBox" layoutX="10.0" layoutY="10.0"
                          promptText="Select Device">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </ComboBox>
                <ComboBox id="appComboBox" fx:id="appComboBox" layoutX="10.0" layoutY="37.0" promptText="Select App"
                          visible="false">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets top="55.0"/>
                    </VBox.margin>
                </ComboBox>
            </children>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-: ;">
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@uiAssets/powered%20by@3x.png"/>
                    </image>
                </ImageView>
                <Button fx:id="runButton" mnemonicParsing="false" onAction="#setRunButtonFunctionality"
                        style="-fx-background-color: inherit;" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                    <graphic>
                        <ImageView fitHeight="66.0" fitWidth="71.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@uiAssets/drawn-button-play-12.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <padding>
                        <Insets right="5.0" top="5.0"/>
                    </padding>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>
