<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<Accordion fx:id="accordion" stylesheets="@../style/tab2.css" xmlns="http://javafx.com/javafx/8.0.172-ea"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="core.UI.controller.tab.advancedTab.AdvancedTabController">
    <panes>
        <TitledPane fx:id="testConfig" text="Test Configurations">
            <GridPane hgap="5.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label text="Run Type">
                    <font>
                        <Font name="Heiti SC Medium" size="18.0"/>
                    </font>
                </Label>
                <RadioButton fx:id="singleRun" selected="true" text="Single Run" GridPane.columnIndex="1">
                    <font>
                        <Font name="Heiti SC Light" size="18.0"/>
                    </font>
                    <toggleGroup>
                        <ToggleGroup fx:id="runType"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="parallelRun" text="Parallel Run" toggleGroup="$runType"
                             GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font name="Heiti SC Light" size="18.0"/>
                    </font>
                </RadioButton>
                <ComboBox fx:id="appComboBox" promptText="Select App" visible="false" GridPane.columnIndex="1"
                          GridPane.rowIndex="2"/>
                <CheckBox fx:id="installApp" layoutX="20.0" layoutY="186.0" mnemonicParsing="false"
                          text="Install App ?" GridPane.rowIndex="2">
                    <font>
                        <Font name="Heiti SC Medium" size="18.0"/>
                    </font>
                </CheckBox>
                <CheckBox fx:id="videoRecord" mnemonicParsing="false" text="Video Recording"
                          GridPane.rowIndex="3">
                    <font>
                        <Font name="Heiti SC Medium" size="18.0"/>
                    </font>
                </CheckBox>
            </GridPane>
        </TitledPane>
        <TitledPane fx:id="testNGConfig" text="TestNG Configurations">
            <content>
                <GridPane hgap="5.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Test">
                            <font>
                                <Font name="Heiti SC Medium"
                                      size="18.0"/>
                            </font>
                        </Label>

                        <ComboBox fx:id="testClassComboBox"
                                  promptText="Select Test"
                                  GridPane.columnIndex="1"/>

                        <TextField fx:id="testNGSuiteName"
                                   promptText="Suite Name"
                                   GridPane.rowIndex="1">
                            <font>
                                <Font name="Heiti SC Medium"
                                      size="18.0"/>
                            </font>
                        </TextField>

                        <TextField fx:id="testNGTestName"
                                   promptText="Test Name"
                                   GridPane.rowIndex="2">
                            <font>
                                <Font name="Heiti SC Medium"
                                      size="18.0"/>
                            </font>
                        </TextField>

                        <TextField fx:id="testNGDeviceName"
                                   promptText="Device Name"
                                   GridPane.rowIndex="3">
                            <font>
                                <Font name="Heiti SC Medium" size="18.0"/>
                            </font>
                        </TextField>

                        <ComboBox fx:id="testNGVerbose"
                                  prefWidth="150.0"
                                  promptText="Set Verbose"
                                  GridPane.rowIndex="4">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <Integer fx:value="1"/>
                                    <Integer fx:value="2"/>
                                    <Integer fx:value="3"/>
                                    <Integer fx:value="4"/>
                                </FXCollections>
                            </items>
                            <value>
                                <Integer fx:value="0"/>
                            </value>
                        </ComboBox>

                        <ComboBox fx:id="testNGThreadCount"
                                  prefWidth="150.0"
                                  promptText="Set Thread Count"
                                  GridPane.rowIndex="5">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <Integer fx:value="1"/>
                                    <Integer fx:value="2"/>
                                    <Integer fx:value="3"/>
                                    <Integer fx:value="4"/>
                                </FXCollections>
                            </items>
                            <value>
                                <Integer fx:value="0"/>
                            </value>
                        </ComboBox>

                        <ComboBox fx:id="testNGParallel"
                                  prefWidth="150.0"
                                  promptText="Set Parallel Mode"
                                  GridPane.rowIndex="6">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </children>
                </GridPane>
            </content>
        </TitledPane>
    </panes>
</Accordion>
