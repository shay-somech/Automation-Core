<?xml version="1.0" encoding="UTF-8"?>

<?import core.constants.PlatformType?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="vBox" xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="core.UI.controller.tab.homeTab.HomeTabController">
    <GridPane alignment="CENTER" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints fillWidth="false"
                               hgrow="NEVER"
                               maxWidth="380.0"
                               minWidth="243.0"
                               prefWidth="356.0"/>

            <ColumnConstraints fillWidth="false"
                               hgrow="NEVER"
                               maxWidth="287.0"
                               minWidth="150.0"
                               prefWidth="174.0"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints minHeight="10.0"
                            prefHeight="30.0"
                            vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0"
                            prefHeight="30.0"
                            vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0"
                            prefHeight="30.0"
                            vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0"
                            prefHeight="30.0"
                            vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0"
                            prefHeight="30.0"
                            vgrow="SOMETIMES"/>
        </rowConstraints>

        <padding>
            <Insets bottom="10.0"
                    left="10.0"
                    right="10.0"
                    top="10.0"/>
        </padding>
        <Label text="Platform">
            <font>
                <Font name="Heiti SC Medium"
                      size="18.0"/>
            </font>
        </Label>

        <ComboBox fx:id="platformComboBox"
                  promptText="Select Platform"
                  GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <PlatformType fx:value="ANDROID"/>
                    <PlatformType fx:value="IOS"/>
                </FXCollections>
            </items>
        </ComboBox>

        <ComboBox fx:id="secondPlatformComBox"
                  promptText="Select 2nd Platform"
                  visible="false"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <PlatformType fx:value="ANDROID"/>
                    <PlatformType fx:value="IOS"/>
                </FXCollections>
            </items>
        </ComboBox>


        <Label text="Device"
               GridPane.rowIndex="2">
            <font>
                <Font name="Heiti SC Medium"
                      size="18.0"/>
            </font>
        </Label>

        <ComboBox fx:id="deviceComboBox"
                  promptText="Select Device"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="2"/>

        <ComboBox fx:id="deviceComboBox2"
                  promptText="Select 2nd Device"
                  visible="false"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="3"/>

        <CheckBox fx:id="noReset"
                  text="_Keep App data (noReset Capability)"
                  GridPane.rowIndex="4">
            <font>
                <Font name="Heiti SC Medium"
                      size="18.0"/>
            </font>
        </CheckBox>
    </GridPane>

    <HBox alignment="CENTER_RIGHT"
          fillHeight="false"
          style="-: ;">
        <ImageView fitHeight="150.0"
                   fitWidth="200.0"
                   pickOnBounds="true"
                   preserveRatio="true">
            <Image url="/uiAssets/powered by@3x.png"/>
        </ImageView>

        <Button fx:id="runButton"
                contentDisplay="CENTER"
                style="-fx-background-color: transparent;"
                text=" _Run"
                textFill="#cc101000"
                onAction="#onRunButtonClicked">

            <graphic>
                <ImageView fitHeight="66.0"
                           fitWidth="71.0"
                           pickOnBounds="true"
                           preserveRatio="true">
                    <Image url="/uiAssets/icon.png"/>
                </ImageView>
            </graphic>
            <font>
                <Font/>
            </font>
        </Button>
    </HBox>
</VBox>
